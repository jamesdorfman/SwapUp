<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No other user currently has that skill. Would you like to add it to our databases and use it?"
        android:textSize="16sp"
        android:textColor="@color/oil"
        android:lineSpacingExtra="7dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:id="@+id/cancel_button"
            android:textColor="@color/white"
            android:background="@color/skill_add_color"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Add Skill"
            android:onClick="addVerifiedSkill"
            android:textColor="@color/white"
            android:background="@color/skill_add_color"
            android:layout_marginLeft="5dp"
            android:id="@+id/add_skill_button"/>
    </LinearLayout>

</LinearLayout>